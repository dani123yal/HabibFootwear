@model IEnumerable<HabeebFootwear.Models.Shoe_Size_Color>

@{
    ViewBag.Title = "shoes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Default Modal</h4>
            </div>
            <div class="modal-body">



                @{


                    <div class="target">

                    </div>
                    <div class="colors1">

                    </div>

                    <div class="quantity">

                    </div>


                }



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="box box-primary">
    <div class="box-header with-border" style="padding-bottom:0px;">
        <div class="jumbotron" style="padding-bottom:0px;padding-top:0px; background-color:white;">
            <center>
                <h2 style="font-family:Arial;font-size:35px;font-weight:bold;">Shoes</h2>

            </center>
        </div>
    </div>

    <!-- /.box-header -->
    <div class="box-body">
        <div class="table-responsive">
            <div class="col-md-12">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>

                            <th>Shoe Article</th>

                            <th>Quantity</th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>


                        @{//string lastArticle = ""; int i = 0;

                            var result = Model.GroupBy(c => c.Shoe_Size.Shoe.shoeArticle).Select(g => new { article = g.Key, total = g.Sum(ii => ii.quantityInWH) });

                        }

                        @foreach (var item in result)
                        {
                            //i++;

                            /*if (lastArticle.Equals(item.shoeArticle))
                            {
                                continue;
                            }*/

                            <tr>

                                <td>
                                    @item.article
                                </td>

                                <td>
                                    @item.total




                                </td>



                                <td>
                                    <button class="btn" onclick="rrrf('@item.article')">Details</button>
                                </td>

                            </tr>

                            // lastArticle = item.shoeArticle;

                        }


                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <div>

    </div>
    <!-- /.box-body -->
</div>

<script type="text/javascript">
    function GetDetails(id,outletid) {

        $.ajax({
            type: "GET",
            url: '/Shoe/Details/?id=' + id + '&outletid=' + outletid,
            contentType: "application/json; charset=utf-8",

            success: function () {

                $('#modal-default').modal('toggle');
            },

        });
        }

</script>

<script type="text/javascript">

    function rrrf(id) {

        $(function () {
            $('.quantity').html('');

            $('.colors1').html('');

            $('.target').load('/outlet/warehouseQuantity/' + id, function (responseText, textStatus, XMLHttpRequest) {
                if (textStatus == "success") {
                    // all good!


                    $('#modal-default').modal('toggle');
                    $('.flat-red').iCheck({ checkboxClass: 'icheckbox_flat-green', radioClass: 'iradio_flat-green' });
                }
                if (textStatus == "error") {
                    // oh noes!
                }
            });







        });
    }
</script>
