@model IEnumerable<HabeebFootwear.Models.Vendor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-primary">
    <div class="box-header with-border" style="padding-bottom:0px;">
        <div class="jumbotron" style="padding-bottom:0px;padding-top:0px; background-color:white;">
            <center>
                <h2 style="font-family:Arial;font-size:35px;font-weight:bold;">Vendors List</h2>

            </center>
        </div>
    </div>

    <!-- /.box-header -->
    <div class="box-body">
        <div class="table-responsive">
            <div class="col-md-12">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Vendor Id</th>
                            <th>Vendor Name</th>
                            <th>Vendor Company</th>
                            <th>Vendor Contact No</th>
                            <th>Vendor Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.vendor_Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.vendorName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vendorCompany)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vendorContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vendorAddress)
                            </td>
                            <td>
                                <a href="Edit?id=@item.vendor_Id" class="btn btn-default btn-default"><span class="glyphicon glyphicon-edit"></span> </a>
                                <a href="Delete?id=@item.vendor_Id" onclick="return confirm('Are You Sure to Delete Report?');" class="btn btn-primary btn-default"><span class="glyphicon glyphicon-trash"></span> </a>
                            </td>
                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <!-- /.box-body -->
</div>  <!-- /.box -->
