@model HabeebFootwear.Models.Shoe_Size_Color

@{

    if (Model != null)
    {
        <h3>Quantity in Warehouse: @Model.quantityInWH</h3>

        if (@Model.Outlet_ShoeSizeColor.Where(c => c.outlet_Id == 1).Count() != 0)
        {
            <h3>Quantity in Outlet 1: @Model.Outlet_ShoeSizeColor.Where(c => c.outlet_Id == 1).First().quantity</h3>
        }
        else
        {
            <h3> Quantity in Outlet 1: 0 </h3>

        }

        if (@Model.Outlet_ShoeSizeColor.Where(c => c.outlet_Id == 2).Count() != 0)
        {
            <h3>Quantity in Outlet 2: @Model.Outlet_ShoeSizeColor.Where(c => c.outlet_Id == 2).First().quantity</h3>
        }
        else
        {
            <h3> Quantity in Outlet 2: 0 </h3>

        }


    }
    else
    {
        <h3>Quantity in Warehouse: 0</h3>
        <h3>Quantity in Outlet 1: 0</h3>
        <h3>Quantity in Outlet 2: 0</h3>
    }



}
