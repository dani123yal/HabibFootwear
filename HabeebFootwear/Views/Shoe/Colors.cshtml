@model IEnumerable<HabeebFootwear.Models.Shoe_Size_Color>



<form class="form-group">


    @{

        if (Model.Count() != 0)
        {

            foreach (HabeebFootwear.Models.Shoe_Size_Color v in Model)
            {

                <label>

                    <input type="radio" class="flat-red1" name="ShoeSize" value="" id="@v.shoeSizeColor_Id" />
                    @v.Color.colorName
                    <br />
                </label>



                <script>
                    $('#@v.shoeSizeColor_Id').on('ifChecked', function (event) {
                    bbbc(@v.shoeSizeColor_Id);
                    });
                </script>


            }
        }
        else
        {
            <label>
                There are no colors available for the selected size!
            </label>

        }
    }



</form>

<hr />

<script type="text/javascript">

    function bbbc(id) {
        // alert('ran');



        $(function () {


            $('.quantity').load('/Shoe/quantity/' + id, function (responseText, textStatus, XMLHttpRequest) {
                if (textStatus == "success") {
                    // all good!

                }
                if (textStatus == "error") {
                    // oh noes!
                }
            });







        });
    }
</script>


