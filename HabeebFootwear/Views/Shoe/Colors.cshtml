@model IEnumerable<HabeebFootwear.Models.Shoe_Size_Color>



<form class="form-group">


    @{
                int i = 850;
                if (Model.Count() != 0)
                {

                    foreach (HabeebFootwear.Models.Shoe_Size_Color v in Model)
                    {

                <label>

                    <input type="radio" class="flat-red1" name="ShoeSize" value="" id="@i" />
                    @v.Color.colorName
                    <br />
                </label>



                <script>
                    $('#@i').on('ifChecked', function (event) {
                //alert('ran right');
                bbbc(@v.shoeSizeColor_Id);
            });
                </script>
                i++;

            }
        }
        else
        {
            <label>
                There are no colors available for the selected size!
            </label>

        }
    }



</form>

<hr />

<script type="text/javascript">

    function bbbc(id) {
         //alert('rancolor');
        $('.quantity').html('');



        $(function () {
          

            $('.quantity').load('/Shoe/quantity/' + id, function (responseText, textStatus, XMLHttpRequest) {
                if (textStatus == "success") {
                    // all good!

                }
                if (textStatus == "error") {
                    // oh noes!
                }
            });







        });
    }
</script>


