@model IEnumerable<HabeebFootwear.Models.Shoe>

@{
    ViewBag.Title = "shoes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Default Modal</h4>
            </div>
            <div class="modal-body">
                @{

                <div class="target">
                    Html.RenderPartial("Details");
                </div>
                    
                    

                }



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="box box-primary">
    <div class="box-header with-border" style="padding-bottom:0px;">
        <div class="jumbotron" style="padding-bottom:0px;padding-top:0px; background-color:white;">
            <center>
                <h2 style="font-family:Arial;font-size:35px;font-weight:bold;">Shoes</h2>

            </center>
        </div>
    </div>

    <!-- /.box-header -->
    <div class="box-body">
        <div class="table-responsive">
            <div class="col-md-12">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>

                            <th>Shoe Article</th>
                            <th>Latest Cost</th>
                            <th>Shoe Price</th>
                            <th>Shoe Variety</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.shoeArticle)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.shoeCost)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.shoePrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.shoeVariety)
                                </td>
                                <td>
                                    <button class="btn"   onclick="aaa(@item.shoe_Id)">Details</button>
                                </td>
                                <td>
                                    <label>

                                        <input type="checkbox" class="flat-red" name="ShoeSize" value="" />
                                        
                                        
                                    </label>
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <div>

    </div>
    <!-- /.box-body -->
</div>

<script type="text/javascript">
    function GetDetails(id) {

        $.ajax({
            type: "GET",
            url: '/Shoe/Details/'+id+'',
            contentType: "application/json; charset=utf-8",
            
            success: function () {

                $('#modal-default').modal('toggle');
            },
            
        });
        }

</script>

<script type="text/javascript">

    function aaa(id) {

        $(function () {
            

            $('.target').load('/Shoe/Details/' + id, function (responseText, textStatus, XMLHttpRequest) {
                if (textStatus == "success") {
                    // all good!
                    $('#modal-default').modal('toggle');
                }
                if (textStatus == "error") {
                    // oh noes!
                }
            });

           
            


                
            
        });
    }
</script>
