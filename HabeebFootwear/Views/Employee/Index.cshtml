@model IEnumerable<HabeebFootwear.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <div class="row">
    <div class="col-md-3">
        <a href="/Employee/Create" class="btn btn-block btn-success btn-lg">Create Employee</a>
    </div>
    </div>
<br />
<div class="col-md-9"></div>

    <div class="box box-primary">
        <div class="box-header with-border" style="padding-bottom:0px;">
            <div class="jumbotron" style="padding-bottom:0px;padding-top:0px; background-color:white;">
                <center>
                    <h2 style="font-family:Arial;font-size:35px;font-weight:bold;">Employee List</h2>

                </center>


            </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <div class="col-md-12">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Employee Name</th>
                                <th>Employee Contact No</th>
                                <th>Employee Address</th>
                                <th>Salary</th>
                                <th>Date Of Hirring</th>
                                <th>Type Of Employee</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.DeleteStatus == 0)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.employeeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.employeeContactNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.employeeAddress)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.salary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.dateOfHiring)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.typeOfEmployee)
                                        </td>
                                        <td>
                                            <a href="Employee/Edit?id=@item.employee_Id" class="btn btn-default btn-primary"><span style="color:white" class="glyphicon glyphicon-edit"> Edit</span> </a>
                                            <a href="Employee/Delete?id=@item.employee_Id" onclick="return confirm('Are You Sure to Delete Employee?');" class="btn btn-danger btn-default"><span style="color:white" class="glyphicon glyphicon-trash"> Delete</span> </a>
                                        </td>
                                    </tr>
                                }

                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <!-- /.box-body -->
    </div>  <!-- /.box -->
